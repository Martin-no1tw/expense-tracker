<div class="container mt-4 w-50">
  <div class="row justify-content-center">
    <div class="d-flex">
      <small>*必填欄位</small>
      <h2>請輸入你的支出</h2>
    </div>

    <form action="/records/{{ record._id}}?_method=PUT" class="container needs-validation mt-4" method="POST">
      <div class="input-group mb-3 row justify-content-center ">
        <div class="input-group-prepend form-group">
          <span class="input-group-text" id="basic-addon1">名稱＊</span>
        </div>
        <input id="name" name="name" type="text" class="form-control" value="{{ record.name }}" aria-label="Username"
          aria-describedby="basic-addon1" required>
      </div>

      <div class="input-group mb-3 row justify-content-center">
        <div class="input-group-prepend form-group">
          <span class="input-group-text" id="basic-addon1">日期＊</span>
        </div>
        <input type="date" id="date" name="date" class="form-control" value="{{dateFormate record.date }}" required>
      </div>

      <div class="input-group mb-3 row justify-content-center">
        <div class="input-group-prepend form-group">
          <label class="input-group-text" for="inputGroupSelect01">類別＊</label>
        </div>
        <select name="category" class="custom-select categoty" id="inputGroupSelect01 category" required>
          <option value="餐飲食品" {{#if (eq record.category '餐飲食品' )}}selected{{/if}}>餐飲食品</option>
          <option value="交通出行" {{#if (eq record.category '交通出行' )}}selected{{/if}}>交通出行</option>
          <option value="休閒娛樂" {{#if (eq record.category '休閒娛樂' )}}selected{{/if}}>休閒娛樂</option>
          <option value="家居物業" {{#if (eq record.category '家居物業' )}}selected{{/if}}>家居物業</option>
          <option value="其他" {{#if (eq record.category '其他' )}}selected{{/if}}>其他</option>
        </select>
      </div>

      <div class="input-group mb-3 row justify-content-center">
        <div class="input-group-prepend form-group">
          <span class="input-group-text" id="basic-addon1">金額＊</span>
        </div>
        <input id="amount" name="amount" type="text" class="form-control" value="{{ record.amount }}" aria-label=""
          aria-describedby="basic-addon1" required>
      </div>

      <div class="input-group mb-3 row justify-content-center">
        <button class="btn btn-outline-info" type="submit">送出</button>
      </div>

    </form>
  </div>
</div>